@{
  Layout = "_Layout";
}
@model List<SweetAndSavory.Models.Flavor>;

<h1>Welcome Pierre's Sweet and Savory Shop!</h1>
@if (@Model.Count == 0)
{
  <h3>No Flavors have been entered yet, please enter a flavor</h3>
  <p>@Html.ActionLink("Add new flavor", "Create", "Flavors")</p>
}
else
{
  <p>@Html.ActionLink("See all flavors", "Index", "Flavors")</p>
  <p>@Html.ActionLink("See all treats", "Index", "Treats")</p> 
}

<p>@Html.ActionLink("Create an account", "Index", "Account")</p>