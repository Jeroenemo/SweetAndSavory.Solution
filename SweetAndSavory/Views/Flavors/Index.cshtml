@{
  Layout = "_Layout";
}

@using SweetAndSavory.Models;
@model IEnumerable<SweetAndSavory.Models.Flavor>

<div class="header">Flavors!</div>

<hr>

@if (!@Model.Any())
{
  <h3>No flavors have been added yet!</h3>
} 
else
{
<ul>
  @foreach(Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
  }
</ul>
}

<table>
  <tr>
    <td>@Html.ActionLink("Add new flavor", "Create") | </td>

    <td>@Html.ActionLink("Home", "Index", "Home")</td>
  </tr>
</table>